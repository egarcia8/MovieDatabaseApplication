<link rel="stylesheet" href="~/css/MoviesEdit.css">


<h2>Edit Movie</h2>
<hr />
<div class="d-flex justify-content-center">
    <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only"></span>
    </div>
</div>
<!--Modal-->
<div class="modal fade" id="editMovieModal" tabindex="-1" aria-labelledby="editMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modalContent">
            @* <div class="modal-header">
            <h2 class="modal-title fs-5" id="editModalLabel">Edit Successful</h2>
            </div>*@
            <div class="modal-body">
                <p>Your edit was successful.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="onEditAgain()">Edit Again</button>
                <button type="button" class="btn btn-danger" onclick="onBack()">Back to Movies</button>
            </div>
        </div>
    </div>
</div>
<!--End of Modal-->
<form id="movieEditForm">
    <div class="form-group container-fluid">
        <label for="Title" class="col-form-label"><b>Title:</b></label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="movieTitle" name="movieTitle" />
        </div>
    </div>
    <div class="form-group container-fluid">
        <label for="Description" class="col-form-label"><b>Description:</b></label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="movieDescription" name="movieDescription" />
        </div>
    </div>
    <div class="form-group container-fluid">
        <label for="Rating" class="col-form-label"><b>Rating:</b></label>
        <select name="ratings" id="movieRating" class="form-control minimal">
        </select>
    </div>
    <div class="form-group container-fluid">
        <div class="row">
            <div class="col-md">
                <label for="movieGenreSelected" class="col-form-label"><b>Genre:</b></label>
                <div class="list-group" id="movieGenreSelected">
                    @*list dynamically populated with js*@
                </div>
            </div>
            <div class="col-md">
                <a href="#" class="previous round" onclick="toGenreSelected()">&#8249;</a>
                <a href="#" class="next round" onclick="toGenreList()">&#8250;</a>
            </div>
            <div class="col-md">
                <label for="movieGenreList" class="col-form-label"><b>Genre List:</b></label>
                <div class="list-group" id="movieGenreList" role="tablist">
                    @*list dynamically populated with js*@
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-primary mt-3" onclick="onEditMovie()">Save Changes</button>
        <button type="button" class="btn btn-outline-primary mt-3" onclick="window.location.href='/Movies'">Back to Movies</button>
    </div>
</form>




<script>
    window.movieEditObj = {
        movieId: @Model
    }
</script>

<script type="text/javascript" src="~/js/MoviesEdit.js" asp-append-version="true"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
