<div class="container">
    <h5 class="mt-3">Enter the title of a movie you would like to search for or add movie manually below.</h5>
    <form id="searchMovie">
        <div class="row">
            <div class="mt-3 form-outline w-50">
                <label class="form-label"for="movieSearchTitle"><b>Title:</b></label>
               <div class="input-group">
                    <input type="text" class="form-control" id="movieSearchTitle" name="movieSearchTitle" placeholder="Enter title" />
                    <div class="input-group-append">
                        <input class="btn btn-outline-danger" id="clearTitleButton" type="reset" value="X" />
                    </div>
               </div> 
            
            </div>
        </div>
        <div class="row">
            <div class="col-md mt-2">
                <button type="button" class="btn btn-primary w-25 mt-2 mb-5" id="searchMovieButton">Search</button>
            </div>
        </div>

    </form>
</div>

<style>
    #clearTitleButton {
        font-size: 18px;
        font-weight: bold;
        padding: 5px;
        padding-top: 4px;
        padding-bottom: 4px;
       
    }
</style>